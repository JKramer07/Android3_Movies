<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.movies_details.MoviesDetailFragment"
    android:layout_margin="10dp">

    <ProgressBar
        android:id="@+id/progressDetailFrag"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <ImageView
        android:id="@+id/ivImageDetail"
        android:layout_width="150dp"
        android:layout_height="250dp"/>

    <TextView
        android:id="@+id/tvNameDetail"
        android:text="Name"
        android:textSize="24sp"
        android:layout_marginTop="16dp"
        android:layout_toEndOf="@+id/ivImageDetail"
        android:layout_marginStart="14sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tvContentDetail"
        android:layout_below="@+id/ivImageDetail"
        android:text="Description"
        android:textSize="24sp"
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tvErrorDetail"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</RelativeLayout>